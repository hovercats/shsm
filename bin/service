#!/bin/sh

if [ $# -lt 2 ];
then
	printf "usage: %s [start|stop|restart] service\n" "$(basename "$0")" \
		>&2
	exit 1
fi

cmd="$1"
service="$2"

case "$cmd" in
sta*)
	svc -s "$service"
	;;
sto*)
	svc -k "$service"
	;;
r*)
	svc -r "$service"
	;;
*)
	printf "usage: %s [start|stop|restart] service\n" "$(basename "$0")" \
		>&2
	exit 1
	;;
esac

